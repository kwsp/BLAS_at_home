{
  "version": 1,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "clang-with-warnings",
      "displayName": "Clang with warnings",
      "description": "Default build options for Clang with warnings enabled.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-Wall -Werror -fcolor-diagnostics -Wno-deprecated-declarations"
      }
    }
  ]
}
